@model List<Service>
<section class="services-section ptb-100 gray-light-bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="section-heading text-center mb-5">
                    <h2>We Provide Best Quality Services</h2>
                    <p class="lead">
                        Efficiently aggregate end-to-end core competencies without maintainable ideas. Dynamically
                        foster tactical solutions without enabled value.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="services-single d-flex p-5 my-md-3 my-lg-3 my-sm-0 shadow-sm white-bg rounded">
                        <div class="service-icon mr-4">
                            <span class="@item.Icon icon-md color-secondary"></span>
                        </div>
                        <div class="services-content-wrap">
                            <h5>@item.Name</h5>
                            <p class="mb-0">@item.Content.</p>
                            <a asp-controller="Services" asp-action="Service" target="_blank" class="detail-link mt-3">Read more <span class="ti-arrow-right"></span></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>